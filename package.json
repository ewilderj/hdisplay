{
  "name": "hdisplay",
  "version": "0.1.0",
  "description": "Display server for 1280x400 USB monitor",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js & open http://localhost:3000?dev=true",
    "cli": "node cli/index.js",
    "setup": "npm install && npm link",
    "mac:preview": "osascript -e 'tell application \"Safari\" to make new document with properties {URL:\"http://localhost:3000\"}' -e 'tell application \"System Events\" to tell process \"Safari\" to set size of front window to {1280,400}'"
  },
  "bin": {
    "hdisplay": "./cli/index.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "commander": "^11.0.0",
    "axios": "^1.4.0",
    "chalk": "^5.3.0",
    "bonjour-service": "^1.2.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ewilderj/hdisplay.git"
  },
  "author": "",
  "license": "MIT"
}