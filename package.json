{
  "name": "hdisplay",
  "version": "0.1.0",
  "description": "Display server for 1280x400 USB monitor",
  "main": "server/index.js",
  "scripts": {
  "start": "node server/index.js",
    "dev": "nodemon server/index.js & open http://localhost:3000?dev=true",
    "cli": "node cli/index.js",
    "setup": "npm install && npm link",
    "mac:preview": "osascript -e 'tell application \"Safari\" to make new document with properties {URL:\"http://localhost:3000\"}' -e 'tell application \"System Events\" to tell process \"Safari\" to set size of front window to {1280,400}'",
    "test": "jest",
    "test:unit": "jest --testPathPattern=^test/",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed --project=chromium"
  },
  "bin": {
    "hdisplay": "./cli/index.js"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "bonjour-service": "^1.2.1",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "express": "^4.19.2",
    "form-data": "^4.0.0",
    "fs-extra": "^11.2.0",
    "js-yaml": "^4.1.0",
    "multer": "^2.0.0",
    "playwright": "^1.54.2",
    "sharp": "^0.33.5",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@eslint/js": "^9.13.0",
    "globals": "^15.9.0",
    "eslint": "^9.8.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.3.3",
    "supertest": "^7.1.3"
  },
  "engines": {
  "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ewilderj/hdisplay.git"
  },
  "author": "",
  "license": "MIT"
}
