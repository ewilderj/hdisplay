{
  "name": "hdisplay",
  "version": "0.1.0",
  "description": "Display server for 1280x400 USB monitor",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js & open http://localhost:3000?dev=true",
    "cli": "node cli/index.js",
    "setup": "npm install && npm link",
    "mac:preview": "osascript -e 'tell application \"Safari\" to make new document with properties {URL:\"http://localhost:3000\"}' -e 'tell application \"System Events\" to tell process \"Safari\" to set size of front window to {1280,400}'",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed --project=chromium"
  },
  "bin": {
    "hdisplay": "./cli/index.js"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "bonjour-service": "^1.2.1",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "express": "^4.18.2",
    "form-data": "^4.0.0",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.3.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ewilderj/hdisplay.git"
  },
  "author": "",
  "license": "MIT"
}
